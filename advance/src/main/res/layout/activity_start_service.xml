<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="wuhu.anhui.androidframework.StartServiceActivity">

    <Button
        android:id="@+id/btn_start_service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="start simple service"/>

    <Button
        android:id="@+id/btn_local_service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="start local service"/>

    <Button
        android:id="@+id/btn_stop_local_service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="stop local service"/>

    <Button
        android:id="@+id/btn_bind_local_service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="bind_local_service"/>

    <Button
        android:id="@+id/btn_unbind_local_service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="unbind_local_service"/>

    <Button
        android:id="@+id/btn_start_argument_service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="start_argument_service_no_redeliver"/>

    <Button
        android:id="@+id/btn_start_argument_service_redeliver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="start_argument_service_redeliver"/>
    <Button
        android:id="@+id/btn_start_fail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="start_fail"/>

    <Button
        android:id="@+id/btn_kill_process"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="kill process"/>
</LinearLayout>
