<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CircleView">
        <attr name="circle_color" format="color" />
        <attr name="color_filter">
            <enum name="ColorMatrixColorFilter" value="0" />
            <enum name="LightingColorFilter" value="1" />
            <enum name="PorterDuffColorFilter" value="2" />
        </attr>
    </declare-styleable>
    <declare-styleable name="XfermodeView">
        <attr name="xfermode">
            <enum name="DesIn" value="0"/>
            <enum name="DesOut" value="1"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="WaveView">
        <attr name="wave_color" format="color"/>
    </declare-styleable>

    <declare-styleable name="TopBar">
        <attr name="titleText" format="string" />
        <attr name="titleSize" format="dimension" />
        <attr name="titleColor" format="color" />
        <attr name="leftBackground" format="reference" />
        <attr name="rightBackground" format="reference" />
    </declare-styleable>

    <declare-styleable name="CompoundView">
        <attr name="exampleString" format="string" />
        <attr name="exampleDimension" format="dimension" />
        <attr name="exampleColor" format="color" />
        <attr name="exampleDrawable" format="color|reference" />
        <attr name="image" format="reference" />
        <attr name="imageScaleType"  >
            <enum name="fitXY" value="0"/>
            <enum name="center" value="1"/>
        </attr>
    </declare-styleable>
</resources>