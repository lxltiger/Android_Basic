<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="resource"
            type="com.tiger.arch.sample.vo.Resource" />

        <import type="com.tiger.arch.sample.vo.Status" />
        <variable
            name="callback"
            type="com.tiger.arch.sample.ui.common.RetryCallBack"/>

    </data>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="8dp"
        app:visibleGone="@{resource.data==null}">

        <ProgressBar
            android:id="@+id/progressbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:visibleGone="@{resource.status==Status.LOADING}"/>

        <Button
            android:id="@+id/retry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:visibleGone="@{resource.status==Status.ERROR}"
            android:onClick="@{()->callback.retry()}"
            android:text="retry" />

        <TextView
            android:id="@+id/error_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:visibleGone="@{resource.status==Status.ERROR}"
            android:text='@{resource.message??"no wrong"}'
            />

    </LinearLayout>
</layout>