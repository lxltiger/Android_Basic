<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.lxl.yuer.advance">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <uses-feature
        android:name="android.hardware.camera2"
        android:required="false"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".HomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".photopicker.PhotoPickerActivity">
        </activity>
        <activity android:name=".date.DateDemoActivity">
        </activity>

        <activity
            android:name=".avatar.AvatarActivity"
            android:label="@string/title_activity_avatar"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".avatar.PhotoActivity"
            android:label="@string/title_activity_photo"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>


        <service
            android:name=".service.SimpleService"
            android:enabled="true"
            android:exported="false">
        </service>

        <activity android:name=".service.ServiceEntrance">
        </activity>

        <receiver
            android:name=".service.ScreenReceiver"
            android:enabled="true">
        </receiver>
        <!--
        通过添加 android:exported 属性并将其设置为 "false"，确保服务仅适用于您的应用。
        这可以有效阻止其他应用启动您的服务，即便在使用显式 Intent 时也如此
        -->
        <service
            android:name=".service.AdvanceService"
            android:enabled="true"
            android:exported="false">
        </service>
        <service
            android:name=".service.ArgumentService"
            android:exported="false">
        </service>

        <activity android:name=".service.MessengerEntrance">
        </activity>
        <activity android:name=".service.RemoteEntrance">
        </activity>

    </application>

</manifest>