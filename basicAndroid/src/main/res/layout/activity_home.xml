<?xml version="1.0" encoding="utf-8"?>


    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".HomeActivity">
        <Button
            android:id="@+id/btn_back"
            android:text="exit"
            android:background="@drawable/selector_btn_test"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <Button
            android:id="@+id/btn_date_demo"
            android:text="Date Demo"
            android:background="@drawable/selector_btn_test"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/btn_service_demo"
            android:text="Service Demo"
            android:background="@drawable/selector_btn_test"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/btn_messenger_service_demo"
            android:text="Messenger Service Demo"
            android:background="@drawable/selector_btn_test"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/btn_remote_service_demo"
            android:text="Remote Service Demo"
            android:background="@drawable/selector_btn_test"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/btn_data_bind"
            android:text="WaitingDialog"
            android:background="@drawable/selector_btn_test"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>


