<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.lxl.yuer.advance.service.ServiceEntrance">

    <Button
        android:id="@+id/btn_start_service"
        android:layout_width="wrap_content"
        android:text="start service"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btn_stop_service"
        android:layout_width="wrap_content"
        android:text="stop service"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/btn_bind_service"
        android:layout_width="wrap_content"
        android:text="bind service"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/btn_call"
        android:layout_width="wrap_content"
        android:text="call method in service"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btn_advance_service"
        android:layout_width="wrap_content"
        android:text="bind advance service"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/btn_call_advance_method"
        android:layout_width="wrap_content"
        android:text="call advance method"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/btn_remote_service"
        android:layout_width="wrap_content"
        android:text="bind remote service"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/btn_call_remote_method"
        android:layout_width="wrap_content"
        android:text="call remote method"
        android:layout_height="wrap_content"/>
</LinearLayout>
