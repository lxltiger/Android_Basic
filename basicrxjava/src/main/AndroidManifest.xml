<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="shine.com.basicrxjava">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".activity.OneActivity">
        </activity>
        <activity android:name=".activity.TwoActivity">
        </activity>
        <activity android:name=".activity.ThreeActivity">
        </activity>
        <activity android:name=".activity.FlipViewActivity">
        </activity>
        <activity android:name=".activity.SimpleRxActivity">
        </activity>
        <activity android:name=".activity.RxLifeActivity">
        </activity>
        <activity android:name=".activity.BasicTransformActivity">
        </activity>
    </application>

</manifest>