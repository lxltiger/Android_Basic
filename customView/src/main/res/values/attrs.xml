    <declare-styleable name="MyView">
        <attr name="exampleString"/>
        <attr name="exampleDimension"/>
        <attr name="exampleColor"/>
        <attr name="exampleDrawable"/>
    </declare-styleable>

    <declare-styleable name="CompoundView">
        <attr name="exampleString"/>
        <attr name="exampleDimension"/>
        <attr name="exampleColor"/>
