<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="user"
            type="com.lxl.advance.entity.User"/>
        <variable
            name="handler"
            type="com.lxl.advance.UserClickHandler"/>
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="@{user.firstName}"/>
        <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="@{user.lastName}"/>
        <!--单引号和双引号的配合使用-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text='@{"the age is "+user.age}'/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="show user info"
            android:onClick="@{(view)->handler.onShowInfoClick(view,user)}"/>
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onCheckedChanged="@{(view,isChecked)->handler.onCheckChanged(view,isChecked)}"
            android:text="Yelp"/>
    </LinearLayout>
</layout>

